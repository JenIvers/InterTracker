rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Artifacts path: artifacts/{userId}/{artifactId}.{extension}
    match /artifacts/{userId}/{artifactId} {
      // Anyone can read artifacts (for sharing with advisors)
      allow read: if true;

      // Only the authenticated user can upload/modify/delete their own artifacts
      allow write, delete: if request.auth != null && request.auth.uid == userId;

      // Enforce file size limits (10MB)
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*|application/pdf');
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
