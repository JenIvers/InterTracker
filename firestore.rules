rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /intern_data/{userId} {
      // Allow anyone with the URL to read the data (for the advisor)
      allow read: if true;
      
      // Only allow writes to the default_user for now
      // (In the future, we can add a secret token check here)
      allow write: if userId == 'default_user';
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
